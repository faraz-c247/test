@import 'bootstrap/dist/css/bootstrap.min.css';
@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap');

:root {
  /* Figma Color Palette */
  --primary-green: #2CA248;
  --primary-green-dark: #109445;
  --gradient-primary: linear-gradient(90deg, #133F71 0%, #20CD2C 100%);
  --accent-orange: #FFB24A;
  --dark-blue: #0D2A4C;
  --dark-blue-light: #133F71;
  
  /* Text Colors */
  --text-primary: #222222;
  --text-secondary: #424242;
  --text-muted: #848484;
  --text-light: #CECECE;
  --text-white: #FFFFFF;
  
  /* Background Colors */
  --bg-primary: #FFFFFF;
  --bg-green-light: rgba(44, 162, 72, 0.08);
  --bg-green-medium: rgba(44, 162, 72, 0.1);
  --bg-orange-light: rgba(255, 178, 74, 0.1);
  
  /* Border & Shadows */
  --border-light: #CECECE;
  --border-green: rgba(44, 162, 72, 0.3);
  --shadow-sm: 0px 0px 12px 0px rgba(12, 12, 13, 0.22);
  --shadow-md: 0px 8px 24px 0px rgba(56, 65, 64, 0.12);
  --shadow-lg: 0px 8px 24px 0px rgba(56, 65, 64, 0.3);
  --shadow-xl: 0px 10px 30px 0px rgba(0, 0, 0, 0.25);
  
  /* Layout */
  --sidebar-width: 260px; /* Reduced from 280px */
  --border-radius-sm: 6px;
  --border-radius-md: 10px;
  --border-radius-lg: 12px;
  --border-radius-xl: 20px;
  --border-radius-xxl: 24px;
  
  /* Legacy Bootstrap overrides */
  --bs-primary: #2CA248;
  --bs-primary-rgb: 44, 162, 72;
  --bs-success: #2CA248;
  --bs-success-rgb: 44, 162, 72;
  --bs-warning: #FFB24A;
  --bs-warning-rgb: 255, 178, 74;
  --bs-dark: #0D2A4C;
  --bs-dark-rgb: 13, 42, 76;
}

* {
  box-sizing: border-box;
  padding: 0;
  margin: 0;
}

html,
body {
  max-width: 100vw;
  overflow-x: hidden;
  font-family: 'Poppins', -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
}

body {
  color: var(--text-primary);
  background: var(--bg-primary);
  line-height: 1.5;
  font-weight: 400;
}

/* Typography Scale */
.h1, h1 { font-size: 58px; font-weight: 700; line-height: 1.2; }
.h2, h2 { font-size: 48px; font-weight: 700; line-height: 1.2; }
.h3, h3 { font-size: 38px; font-weight: 700; line-height: 1.3; }
.h4, h4 { font-size: 28px; font-weight: 600; line-height: 1.3; }
.h5, h5 { font-size: 22px; font-weight: 600; line-height: 1.4; }
.h6, h6 { font-size: 18px; font-weight: 600; line-height: 1.4; }

.text-lg { font-size: 24px; font-weight: 400; line-height: 1.5; }
.text-base { font-size: 18px; font-weight: 500; line-height: 1.5; }
.text-sm { font-size: 16px; font-weight: 400; line-height: 1.5; }
.text-xs { font-size: 14px; font-weight: 400; line-height: 1.4; }

/* Custom Color Classes */
.text-primary-custom { color: var(--text-primary) !important; }
.text-secondary-custom { color: var(--text-secondary) !important; }
.text-muted-custom { color: var(--text-muted) !important; }
.text-green { color: var(--primary-green) !important; }
.text-orange { color: var(--accent-orange) !important; }
.text-dark-blue { color: var(--dark-blue) !important; }

.bg-green-light { background-color: var(--bg-green-light) !important; }
.bg-green-medium { background-color: var(--bg-green-medium) !important; }
.bg-orange-light { background-color: var(--bg-orange-light) !important; }

/* Button Styles */
.btn-primary-gradient {
  background: var(--gradient-primary);
  border: none;
  color: var(--text-white);
  font-weight: 600;
  font-size: 18px;
  line-height: 2;
  padding: 10px 30px;
  border-radius: var(--border-radius-md);
  transition: all 0.3s ease;
}

.btn-primary-gradient:hover {
  background: linear-gradient(90deg, #0F2F5F 0%, #1BB83A 100%);
  transform: translateY(-2px);
  box-shadow: var(--shadow-md);
}

/* Gradient Background Classes */
.bg-gradient-primary {
  background: var(--gradient-primary);
}

.bg-gradient-to-r {
  background: linear-gradient(to right, var(--bg-green-light), rgba(44, 162, 72, 0.15));
}

.btn-outline-gradient {
  background: transparent;
  border: 2px solid;
  border-image: var(--gradient-primary) 1;
  color: var(--primary-green);
  font-weight: 600;
  font-size: 18px;
  line-height: 2;
  padding: 8px 28px;
  border-radius: var(--border-radius-md);
  transition: all 0.3s ease;
}

.btn-outline-gradient:hover {
  background: var(--gradient-primary);
  color: var(--text-white);
  transform: translateY(-2px);
  box-shadow: -4px 4px 8px 0px rgba(19, 63, 113, 0.5);
}

/* Card Styles */
.card-figma {
  background: var(--bg-primary);
  border: 1px solid var(--border-light);
  border-radius: var(--border-radius-lg);
  box-shadow: var(--shadow-md);
  transition: all 0.3s ease;
  margin-bottom: 0;
}

.card-figma:hover {
  transform: translateY(-4px);
  box-shadow: var(--shadow-xl);
}

.card-figma-header {
  background: var(--bg-green-light);
  border-bottom: 1px solid var(--border-light);
  padding: 20px 30px;
  border-radius: var(--border-radius-xl) var(--border-radius-xl) 0 0;
}

/* Form Controls */
.form-control-figma {
  border: 1px solid var(--border-light);
  border-radius: var(--border-radius-sm);
  padding: 12px 16px;
  font-family: 'Poppins', sans-serif;
  font-size: 16px;
  font-weight: 400;
  color: var(--text-primary);
  background: var(--bg-primary);
  box-shadow: var(--shadow-sm);
  transition: all 0.3s ease;
}

.form-control-figma:focus {
  border-color: var(--primary-green);
  box-shadow: 0 0 0 0.2rem rgba(44, 162, 72, 0.25);
  outline: none;
}

/* Table Styles */
.table-figma {
  background: var(--bg-primary);
  border-radius: var(--border-radius-lg);
  overflow: hidden;
  box-shadow: var(--shadow-md);
  border: 1px solid var(--border-light);
  margin-bottom: 0;
}

.table-figma thead {
  background: var(--bg-green-light);
}

.table-figma thead th {
  border: none;
  color: var(--text-primary);
  font-weight: 600;
  font-size: 14px;
  padding: 16px 12px;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  background: var(--bg-green-light);
}

.table-figma tbody tr {
  border-bottom: 1px solid var(--border-light);
  transition: background-color 0.2s ease;
}

.table-figma tbody tr:hover {
  background-color: var(--bg-green-light);
}

.table-figma tbody td {
  border: none;
  color: var(--text-primary);
  font-weight: 400;
  font-size: 14px;
  padding: 12px;
  vertical-align: middle;
  border-bottom: 1px solid var(--border-light);
}

.table-figma tbody tr:last-child {
  border-bottom: none;
}

/* Empty State */
.table-empty-state {
  text-align: center;
  padding: 40px 20px;
  color: var(--text-muted);
  background: var(--bg-green-light);
  border-radius: var(--border-radius-lg);
  margin: 20px;
}

.table-empty-state h5 {
  color: var(--text-secondary);
  margin-bottom: 10px;
  font-weight: 600;
}

.table-empty-state p {
  color: var(--text-muted);
  margin-bottom: 20px;
  max-width: 400px;
  margin-left: auto;
  margin-right: auto;
}

/* Compact table when data exists */
.table-figma-compact {
  background: var(--bg-primary);
  border-radius: var(--border-radius-lg);
  overflow: hidden;
  box-shadow: var(--shadow-md);
  border: 1px solid var(--border-light);
  margin-bottom: 0;
}

.table-figma-compact thead th {
  border: none;
  color: var(--text-primary);
  font-weight: 600;
  font-size: 13px;
  padding: 12px 10px;
  text-transform: uppercase;
  letter-spacing: 0.3px;
  background: var(--bg-green-light);
}

.table-figma-compact tbody td {
  border: none;
  color: var(--text-primary);
  font-weight: 400;
  font-size: 13px;
  padding: 10px;
  vertical-align: middle;
  border-bottom: 1px solid var(--border-light);
}

.table-figma-compact tbody tr:last-child td {
  border-bottom: none;
}

.table-figma-compact tbody tr:hover {
  background-color: var(--bg-green-light);
}

/* Sidebar Styles */
.sidebar-figma {
  background: var(--bg-primary);
  border-right: 1px solid var(--border-light);
  box-shadow: 4px 0 12px rgba(0, 0, 0, 0.1);
}

.sidebar-figma .nav-link {
  color: var(--text-secondary);
  font-weight: 500;
  font-size: 16px;
  padding: 12px 20px;
  border-radius: var(--border-radius-md);
  margin: 4px 12px;
  transition: all 0.3s ease;
}

.sidebar-figma .nav-link:hover {
  background: var(--bg-green-light);
  color: var(--primary-green);
  transform: translateX(4px);
}

.sidebar-figma .nav-link.active {
  background: var(--gradient-primary);
  color: var(--text-white);
  box-shadow: var(--shadow-md);
}

/* Navbar Styles */
.navbar-figma {
  background: var(--bg-primary);
  border-bottom: 1px solid var(--border-light);
  box-shadow: var(--shadow-sm);
  padding: 12px 0;
}

.navbar-figma .navbar-brand {
  font-weight: 700;
  font-size: 24px;
  color: var(--dark-blue);
}

/* Badge Styles */
.badge-figma-green {
  background: var(--primary-green);
  color: var(--text-white);
  font-weight: 500;
  padding: 6px 12px;
  border-radius: var(--border-radius-md);
}

.badge-figma-orange {
  background: var(--accent-orange);
  color: var(--dark-blue);
  font-weight: 500;
  padding: 6px 12px;
  border-radius: var(--border-radius-md);
}

.badge-figma-outline {
  background: transparent;
  border: 1px solid var(--primary-green);
  color: var(--primary-green);
  font-weight: 500;
  padding: 6px 12px;
  border-radius: var(--border-radius-md);
}

/* Modal Styles */
.modal-figma .modal-content {
  border: none;
  border-radius: var(--border-radius-xl);
  box-shadow: var(--shadow-xl);
}

.modal-figma .modal-header {
  background: var(--bg-green-light);
  border-bottom: 1px solid var(--border-light);
  border-radius: var(--border-radius-xl) var(--border-radius-xl) 0 0;
  padding: 24px 30px;
}

.modal-figma .modal-header h4 {
  color: var(--text-primary);
  font-weight: 600;
  margin: 0;
}

.modal-figma .modal-body {
  padding: 30px;
}

.modal-figma .modal-footer {
  border-top: 1px solid var(--border-light);
  padding: 20px 30px;
  background: var(--bg-primary);
  border-radius: 0 0 var(--border-radius-xl) var(--border-radius-xl);
}

/* Input Group Styles */
.input-group-figma .input-group-text {
  background: rgba(206, 206, 206, 0.5);
  border: 1px solid var(--border-light);
  border-right: none;
  color: var(--text-muted);
  font-size: 16px;
  padding: 12px 16px;
}

.input-group-figma .form-control {
  border-left: none;
}

/* Icon Styles */
.icon-figma {
  width: 68px;
  height: 68px;
  background: var(--accent-orange);
  border-radius: var(--border-radius-md);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: -6px 6px 0px 0px rgba(44, 162, 72, 0.3);
  transition: all 0.3s ease;
}

.icon-figma:hover {
  transform: translateY(-2px);
  box-shadow: -6px 8px 0px 0px rgba(44, 162, 72, 0.4);
}

/* Loading Spinner */
.spinner-figma {
  border: 4px solid var(--bg-green-light);
  border-top: 4px solid var(--primary-green);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* Responsive Typography */
@media (max-width: 768px) {
  .h1, h1 { font-size: 42px; }
  .h2, h2 { font-size: 36px; }
  .h3, h3 { font-size: 28px; }
  .h4, h4 { font-size: 24px; }
  .h5, h5 { font-size: 20px; }
  .h6, h6 { font-size: 18px; }
}

/* Sidebar Layout */
.sidebar-layout-main {
  margin-left: var(--sidebar-width);
  min-height: 100vh;
  background: var(--bg-primary);
  width: calc(100% - var(--sidebar-width));
}

@media (max-width: 991.98px) {
  .sidebar-layout-main {
    margin-left: 0 !important;
  }
}

/* Navigation Hover Effects */
.hover-bg-light:hover {
  background-color: var(--bg-green-light) !important;
  transition: background-color 0.15s ease-in-out;
}

.nav-link.active {
  background: var(--gradient-primary) !important;
  color: var(--text-white) !important;
  border-radius: var(--border-radius-md);
}

/* Animation Classes */
.fade-in {
  animation: fadeIn 0.5s ease-in;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20px); }
  to { opacity: 1; transform: translateY(0); }
}

.slide-up {
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from { opacity: 0; transform: translateY(10px); }
  to { opacity: 1; transform: translateY(0); }
}

/* Utility Classes */
.border-figma { border: 1px solid var(--border-light) !important; }
.border-green { border: 1px solid var(--primary-green) !important; }
.border-orange { border: 1px solid var(--accent-orange) !important; }

.shadow-figma-sm { box-shadow: var(--shadow-sm) !important; }
.shadow-figma-md { box-shadow: var(--shadow-md) !important; }
.shadow-figma-lg { box-shadow: var(--shadow-lg) !important; }
.shadow-figma-xl { box-shadow: var(--shadow-xl) !important; }

.rounded-figma-sm { border-radius: var(--border-radius-sm) !important; }
.rounded-figma-md { border-radius: var(--border-radius-md) !important; }
.rounded-figma-lg { border-radius: var(--border-radius-lg) !important; }
.rounded-figma-xl { border-radius: var(--border-radius-xl) !important; }
.rounded-figma-xxl { border-radius: var(--border-radius-xxl) !important; }

/* Table Specific Styles */
.table-container-figma {
  background: var(--bg-primary);
  border-radius: var(--border-radius-lg);
  box-shadow: var(--shadow-md);
  overflow: hidden;
  border: 1px solid var(--border-light);
  margin-bottom: 20px;
}

.table-header-figma {
  background: var(--bg-green-light);
  padding: 20px 24px;
  border-bottom: 1px solid var(--border-light);
}

.table-header-figma h4 {
  color: var(--text-primary);
  font-weight: 600;
  margin: 0;
}

.table-header-figma p {
  color: var(--text-secondary);
  margin: 8px 0 0 0;
  font-size: 16px;
}

/* Status Badges */
.status-badge-active {
  background: var(--primary-green);
  color: var(--text-white);
  padding: 6px 12px;
  border-radius: var(--border-radius-md);
  font-size: 14px;
  font-weight: 500;
}

.status-badge-inactive {
  background: var(--text-muted);
  color: var(--text-white);
  padding: 6px 12px;
  border-radius: var(--border-radius-md);
  font-size: 14px;
  font-weight: 500;
}

.role-badge-admin {
  background: var(--dark-blue);
  color: var(--text-white);
  padding: 6px 12px;
  border-radius: var(--border-radius-md);
  font-size: 14px;
  font-weight: 500;
}

.role-badge-user {
  background: var(--accent-orange);
  color: var(--dark-blue);
  padding: 6px 12px;
  border-radius: var(--border-radius-md);
  font-size: 14px;
  font-weight: 500;
}

/* Action Button Groups */
.action-buttons {
  display: flex;
  gap: 8px;
  align-items: center;
}

.action-btn {
  padding: 6px 12px;
  border-radius: var(--border-radius-sm);
  border: none;
  font-size: 14px;
  font-weight: 500;
  transition: all 0.2s ease;
  cursor: pointer;
}

.action-btn-edit {
  background: var(--primary-green);
  color: var(--text-white);
}

.action-btn-edit:hover {
  background: var(--primary-green-dark);
  transform: translateY(-1px);
}

.action-btn-delete {
  background: #dc3545;
  color: var(--text-white);
}

.action-btn-delete:hover {
  background: #c82333;
  transform: translateY(-1px);
}

/* Pagination */
.pagination-figma .page-link {
  color: var(--text-secondary);
  border: 1px solid var(--border-light);
  padding: 10px 16px;
  font-weight: 500;
}

.pagination-figma .page-link:hover {
  background: var(--bg-green-light);
  color: var(--primary-green);
  border-color: var(--primary-green);
}

.pagination-figma .page-item.active .page-link {
  background: var(--gradient-primary);
  border-color: var(--primary-green);
  color: var(--text-white);
}

/* Search and Filter Controls */
.search-filter-container {
  background: var(--bg-green-light);
  padding: 16px 20px;
  border-radius: var(--border-radius-lg);
  margin-bottom: 20px;
  border: 1px solid var(--border-light);
}

/* Dropdown Styles */
.dropdown-figma .dropdown-menu {
  border: 1px solid var(--border-light);
  border-radius: var(--border-radius-md);
  box-shadow: var(--shadow-md);
  padding: 8px 0;
}

.dropdown-figma .dropdown-item {
  color: var(--text-secondary);
  padding: 10px 20px;
  font-weight: 400;
  transition: all 0.2s ease;
}

.dropdown-figma .dropdown-item:hover {
  background: var(--bg-green-light);
  color: var(--primary-green);
}

/* Alert Styles */
.alert-figma-success {
  background: rgba(44, 162, 72, 0.1);
  border: 1px solid var(--primary-green);
  color: var(--primary-green-dark);
  border-radius: var(--border-radius-md);
}

.alert-figma-warning {
  background: rgba(255, 178, 74, 0.1);
  border: 1px solid var(--accent-orange);
  color: #B8860B;
  border-radius: var(--border-radius-md);
}

.alert-figma-danger {
  background: rgba(220, 53, 69, 0.1);
  border: 1px solid #dc3545;
  color: #721c24;
  border-radius: var(--border-radius-md);
}

/* Layout Improvements */
.main-content-figma {
  padding: 20px;
  background: var(--bg-primary);
  min-height: calc(100vh - 80px);
}

/* Responsive Design */
@media (max-width: 768px) {
  .main-content-figma {
    padding: 16px 12px;
  }
  
  .table-figma {
    font-size: 14px;
  }
  
  .table-figma thead th,
  .table-figma tbody td {
    padding: 12px 8px;
  }
}

